# ============================================================================
# Application Configuration
# ============================================================================

# API URLs (for Supabase services)
API_EXTERNAL_URL=http://localhost:8000
SITE_URL=http://localhost:8080

# Signup Configuration
DISABLE_SIGNUP=false
ENABLE_EMAIL_SIGNUP=true
ENABLE_EMAIL_AUTOCONFIRM=true

# Additional redirect URLs (comma-separated)
ADDITIONAL_REDIRECT_URLS=

# JWT Configuration
JWT_EXPIRY=3600

# ============================================================================
# Email Configuration (Optional - uses Inbucket by default)
# ============================================================================

# SMTP Settings (configure if you want real email)
SMTP_ADMIN_EMAIL=admin@example.com
SMTP_HOST=mail
SMTP_PORT=2500
SMTP_SENDER_NAME=Quote App

# Mailer URL paths (leave as default)
MAILER_URLPATHS_INVITE=/auth/v1/verify
MAILER_URLPATHS_CONFIRMATION=/auth/v1/verify
MAILER_URLPATHS_RECOVERY=/auth/v1/verify
MAILER_URLPATHS_EMAIL_CHANGE=/auth/v1/verify

# ============================================================================
# Optional: ERP Integration
# ============================================================================

# Only needed if integrating with external ERP system
# VITE_ERP_API_URL=http://your-erp-api.internal
# VITE_ERP_API_KEY=your-erp-api-key
